<div class="container mt-5">
  <form action="/records/{{record._id}}?_method=PUT" method="POST">
    <div class="col-md-10 mx-auto newPage p-3 bg-light">
      <div class="form-group row mt-5">
        <label
          class="col-3 col-form-label text-nowrap d-flex justify-content-end p-1"
        >必填欄位 *</label>
        <div class="col-6 d-flex justify-content-center text-nowrap">
          <div class="newTitle">
            <h4>請修改你的支出</h4>
            {{> message}}
          </div>
        </div>
      </div>
      <div class="form-group row">
        <label
          for="name"
          class="col-3 col-form-label d-flex justify-content-end"
        >名稱 * :</label>
        <div class="col-7">
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            value="{{record.name}}"
            maxlength="20"
          />
        </div>
      </div>
      <div class="form-group row">
        <label
          for="date"
          class="col-3 col-form-label d-flex justify-content-end"
        >日期 * :</label>
        <div class="col-7">
          <input
            type="date"
            class="form-control"
            id="date"
            name="date"
            value="{{record.date}}"
          />
        </div>
      </div>
      <div class="form-group row">
        <label
          for="category"
          class="col-3 col-form-label d-flex justify-content-end"
        >類別 * :</label>
        <div class="col-7">
          <select id="category" class="custom-select" name="category">
            {{#each categories}}
              <option value="{{this.category}}" {{#ifEq this.category ../record.category}} selected {{/ifEq}}>{{this.category}}</option>
              {{!-- 為 is 用法 --}}
              {{!-- <option value="{{this.category}}" {{#is this.category ../record.category}} selected {{/is}}>{{this.category}}</option> --}}
              {{! <option value="2">交通出行</option>
            <option value="3">休閒娛樂</option>
            <option value="3">餐飲食品</option>
            <option value="3">其他</option> }}
            {{/each}}
          </select>
        </div>
      </div>
      <div class="form-group row">
        <label
          for="merchant"
          class="col-3 col-form-label d-flex justify-content-end"
        >店家 * :</label>
        <div class="col-7">
          <input
            type="text"
            class="form-control"
            id="merchant"
            name="merchant"
            value="{{record.merchant}}" maxlength="20"
          />
        </div>
      </div>
      <div class="form-group row">
        <label
          for="amount"
          class="col-3 col-form-label d-flex justify-content-end"
        >金額 * :</label>
        <div class="col-7">
          <input
            type="number"
            class="form-control"
            id="amount"
            name="amount"
            value="{{record.amount}}"
            max="1000000000000"
          />
        </div>
      </div>
      <div class="form-inline newBtn d-flex justify-content-center mt-4">
        <button
          type="submit"
          class="btn btn-primary btn-lg ml-3"
          style="width: 100px"
        >送出</button>
        <button
          type="reset"
          class="btn btn-danger btn-lg mx-3"
          style="width: 100px"
        >重設</button>
        <a href="/" class="btn btn-success mr-3" style="width: 100px;height: 48px;line-height: 32px;font-size:22px">返回</a>
      </div>
    </div>
  </form>

</div>