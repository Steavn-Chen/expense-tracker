<div class="container mt-5">
  <form action="/records/new" method="POST">
    <div class="col-md-10 mx-auto newPage p-3 bg-light">
      <div class="form-group row mt-5">
        <label
          class="col-3 col-form-label text-nowrap d-flex justify-content-end p-1"
        >必填欄位 *</label>
        <div class="col-6 d-flex justify-content-center text-nowrap">
          <div class="newTitle">
            <h4>請輸入你的支出</h4>
          </div>
        </div>
      </div>
      <div class="form-group row">
        <label
          for="name"
          class="col-3 col-form-label d-flex justify-content-end"
        >名稱 * :</label>
        <div class="col-7">
          <input type="text" class="form-control" id="name" name="name" placeholder="請輸入名稱"/>
        </div>
      </div>
      <div class="form-group row">
        <label
          for="date"
          class="col-3 col-form-label d-flex justify-content-end"
        >日期 * :</label>
        <div class="col-7">
          <input type="date" class="form-control" id="date" name="date" placeholder="請填選日期"/>
        </div>
      </div>
      <div class="form-group row">
        <label
          for="category"
          class="col-3 col-form-label d-flex justify-content-end"
        >類別 * :</label>
        <div class="col-7">
          <select id="category" class="custom-select" name="category">
            {{#each categories}}
            <option value="{{ this.category }}">{{ this.category }}</option>
            {{/each}}
          </select>
        </div>
      </div>
      <div class="form-group row">
        <label
          for="merchant"
          class="col-3 col-form-label d-flex justify-content-end"
        >店家 * :</label>
        <div class="col-7">
          <input type="text" class="form-control" id="merchant" name="merchant" placeholder="請填寫店家"/>
        </div>
      </div>
      <div class="form-group row">
        <label
          for="amount"
          class="col-3 col-form-label d-flex justify-content-end"
        >金額 * :</label>
        <div class="col-7">
          <input type="number" class="form-control" id="amount" name="amount" min="0" placeholder="請填寫金額" />
        </div>
      </div>
      <div class="form-inline newBtn d-flex justify-content-center mt-4">
        <button type="submit" class="btn btn-primary btn-lg mr-3">新增支出</button>
        <button type="reset" class="btn btn-danger btn-lg ml-3" style="width: 120px;">重設</button>
      </div>
    </div>
  </form>

</div>